@model shortenUrl.MVC.Data.Entities.Url

@{
    ViewData["Title"] = "Short URL Created";
}

<div class="container py-4">
    <div class="mb-4 text-center">
        <h2 class="text-success fw-bold">
            <i class="bi bi-check-circle-fill me-2"></i> @ViewData["Title"]
        </h2>
        <p class="text-muted">Your shortened URL has been successfully created!</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-success shadow-sm rounded p-4">
                <p class="mb-3">
                    <strong><i class="bi bi-link text-primary me-1"></i> Short URL:</strong>
                    <a href="@ViewBag.ShortUrl" target="_blank" class="text-decoration-none text-primary fw-semibold">
                        @ViewBag.ShortUrl
                    </a>
                </p>
                <p>
                    <strong><i class="bi bi-link-45deg text-secondary me-1"></i> Original URL:</strong>
                    <a href="@Model.OriginalUrl" target="_blank" class="text-decoration-none text-primary fw-semibold">
                        @Model.OriginalUrl
                    </a>
                </p>
            </div>

            <div class="text-center mt-4">
                <h5 class="text-dark fw-bold mb-3">
                    <i class="bi bi-qr-code me-1"></i> Scan with your phone
                </h5>
                <img src="@ViewBag.QrCode" alt="QR Code" class="img-thumbnail shadow-sm" style="max-width: 200px;" />
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Create Another
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
